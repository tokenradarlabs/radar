
# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://postgres:password@localhost:5432/radar_db"

# External API Keys
# CoinGecko API key for price data
COINGECKO_API_KEY="your_coingecko_api_key"

# Ankr API key for Base network RPC access (required for Uniswap price fetching)
ANKR_API_KEY="your_ankr_api_key"

# Application Configuration
# Port for the Fastify server (defaults to 3006)
FASTIFY_PORT=3006

# Authentication
# Secret key for JWT token signing and verification
# Use a strong, random secret in production (32+ characters recommended)
# DO NOT use the default value 'your-super-secure-jwt-secret-key' in production
JWT_SECRET="your-super-secure-jwt-secret-key"

# Environment mode (development, production, test)
NODE_ENV=development

# Rate Limiting Configuration
# Maximum requests allowed within the time window (default: 100)
# RATE_LIMIT_MAX_REQUESTS=100

# Time window for rate limiting (e.g., '1 minute', '10 seconds', '1h') (default: '1 minute')
# RATE_LIMIT_TIME_WINDOW='1 minute'

# Comma-separated list of routes to exclude from rate limiting (e.g., '/health, /public')
# RATE_LIMIT_EXCLUDE_ROUTES='/health'
